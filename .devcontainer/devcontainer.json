{
  "name": "RAG Chatbot Python 3.13",
  // Updated for RAG chatbot with Python 3.13
  "image": "mcr.microsoft.com/devcontainers/python:1-3.13-bullseye",
  "customizations": {
    "codespaces": {
      "openFiles": [
        "README.md",
        "rag_chatbot_app.py"
      ]
    },
    "vscode": {
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python"
      },
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-python.black-formatter",
        "charliermarsh.ruff"
      ]
    }
  },
  "updateContentCommand": "[ -f packages.txt ] && sudo apt update && sudo apt upgrade -y && sudo xargs apt install -y <packages.txt; [ -f requirements.txt ] && pip3 install --user -r requirements.txt; echo 'âœ… RAG Chatbot dependencies installed'",
  "postAttachCommand": {
    "server": "streamlit run rag_chatbot_app.py --server.enableCORS false --server.enableXsrfProtection false --server.port 8501"
  },
  "portsAttributes": {
    "8501": {
      "label": "RAG Chatbot Application",
      "onAutoForward": "openPreview"
    }
  },
  "forwardPorts": [
    8501
  ]
}